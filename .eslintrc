{
  "root": true,
  "env": {
    "browser": true
  },
  "parserOptions": {
    "ecmaVersion": 8,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    },
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 4, {
        "SwitchCase": 1
    }],
    "no-use-before-define": [ "error", { "functions": false } ],
    "brace-style": ["error", "stroustrup"],
    "class-methods-use-this": [0],
    "react/jsx-indent": [0]
  },
  "settings": {
    "react": {
      "pragma": "h"
    }
  },
  "extends": ["standard-jsx", "airbnb-base"],
}
